# A sample Gemfile
source "https://rubygems.org"

# base framework
gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-activerecord'

# api
gem 'grape'

gem 'bootstrap-sass'
gem 'coffee-script'
gem 'sass', :require => 'sass'
gem 'uglifier'
gem 'haml'

gem 'sprockets'
gem 'sprockets-helpers'
gem 'sprockets-sass'

gem 'unicorn'

group :test, :development do
  gem 'sqlite3'
  gem 'minitest'
  gem 'rake'
  gem 'shotgun'
  gem 'tux'
end

group :production do
  gem 'pg'
end
